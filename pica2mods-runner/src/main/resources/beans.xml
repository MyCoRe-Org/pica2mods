  <bean id="catalog-ilm" class="org.mycore.pica2mods.Catalog">
    <property name="url" value="http://opac.lbs-ilmenau.gbv.de/DB=1.3/" />
    <property name="srudbUrl" value="k10plus" />
    <property name="unapiUrl" value="k10plus" />
