    <property name="unapiUrl" value="opac-de-3204" />
    <property name="xsl" value="pica2mods.xsl" />
  </bean>
    
  <bean id="catalogs" class="java.util.HashMap">
    <constructor-arg>
      <map key-type="java.lang.String" value-type="org.mycore.pica2mods.Catalog">
        <entry key="ubbs" value-ref="catalog-ubbs" />
        <entry key="gvk" value-ref="catalog-gvk" />
        <entry key="ubr" value-ref="catalog-ubr" />
        <entry key="ilm" value-ref="catalog-ilm" />
        <entry key="ikar" value-ref="catalog-ikar" />
        <entry key="vd18" value-ref="catalog-vd18" />
        <entry key="erf" value-ref="catalog-erf" />
      </map>
    </constructor-arg>
  </bean>
</beans>
